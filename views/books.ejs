<h2 class="text-center">List of books</h2>

<div class="container">
    <% books.forEach(book => { %>
        <div class="card my-2">
            <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text">Author: <%= book.author %></p>
                <a href="/books/<%= book._id %>" class="btn btn-primary">View Details</a>
            </div>
        </div>
    <% }); %>
</div>
