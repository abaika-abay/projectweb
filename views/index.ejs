<h1 class="text-center">Available Books</h1>

<div class="row">
    <% books.forEach(book => { %>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title"><%= book.title %></h5>
                    <p class="card-text"><%= book.author %></p>
                    <a href="/books/<%= book._id %>" class="btn btn-primary">View Details</a>

                </div>
            </div>
        </div>
    <% }) %>
</div>
